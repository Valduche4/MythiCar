<div class="generale-car">
    <%= cl_image_tag @car.photo.key, class: "pics-car" %>
  <div class="info-car">
    <h3> <%= @car.brand %> </h3>
    <div class="model-car">
      <p> Model :<%= @car.model%></p>
      <p>year : <%= @car.year %></p>
      <p>Plate :<%= @car.plate %></p>
    </div>
      <li><%= link_to "✎", edit_car_path(@car) %></li>
      <li><%= link_to "delete", car_path(@car), method: :delete, data: { confirm: "Are you sure?" }   %></li>
  </div>

  <div class="feature-car">
    <h5>Car's features</h5>
    <ul>
      <% @car.features.each do |feature| %>
        <li><%= feature.spec %> : <%= feature.last_date %> <%= link_to "✎",  edit_car_feature_path(@car, feature) %> <%= link_to "🗑",
                                                                                                                          feature_path(feature),
                                                                                                                          method: :delete,
                                                                                                                          data: { confirm: "Are you sure?" } %></li>
      <% end %>
    </ul>
    <%= link_to "Add features", new_car_feature_path(@car), class: "buton-home" %>
  </div>

  <div class="paper-car">
    <h5>Car's papers</h5>
    <ul>
      <% @car.papers.each do |paper| %>
        <li><%= link_to paper.name, car_paper_path(@car, paper) %> <%= link_to "🗑",
                                                                        paper_path(paper),
                                                                        method: :delete,
                                                                        data: { confirm: "Are you sure?" } %></li>
      <% end %>
    </ul>
    <%= link_to "Add papers", new_car_paper_path(@car), class: "buton-home" %>
  </div>

  <div class="history-btn">
    <%= link_to "History", car_maintenances_path(@car) %>
  </div>

  <%= link_to "Home", user_path(current_user), class: "buton-home" %>
</div>
